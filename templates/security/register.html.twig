{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5 col-md-3">
        <h2>{{ 'register.title'|trans }}</h2>
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
            <div class="mb-3">
                {{ form_label(form.email, 'register.email'|trans, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.name, 'register.name'|trans, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                {{ form_errors(form.name) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.password, 'register.password'|trans, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.password, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
                {{ form_errors(form.password) }}
            </div>
            <button type="submit" class="btn btn-primary">{{ 'register.register'|trans }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}